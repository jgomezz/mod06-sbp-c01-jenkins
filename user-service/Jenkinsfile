pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'Java'
        // git 'Git'
    }

    environment {
        // Test
        DOCKER_IMAGE = 'user-service'
        DOCKER_TAG = '1.0' //   "${BUILD_NUMBER}"

        // Database credentials from Jenkins
        DB_URL = credentials('db-url')
        DB_USERNAME = credentials('db-username')
        DB_PASSWORD = credentials('db-password')
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Getting code...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'üî® Building...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'üß™ Testing...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'üì¶ Creating JAR...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn package -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                echo 'üê≥ Building Docker image...'
                dir('user-service') {
                    script {
                        sh """
                            docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                            # docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest
                        """
                    }
                }
            }
        }

        stage('Docker Compose Stop') {
            steps {
                echo 'üõë Stopping  containers on HOST...'
                script {
                    sh """
                        docker compose down
                    """
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Success in Docker!'
            archiveArtifacts 'user-service/target/*.jar'
        }
        failure {
            echo '‚ùå Failed!'
        }
    }
}
