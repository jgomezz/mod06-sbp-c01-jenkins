pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'Java'
        // git 'Git'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Getting code...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ”¨ Building...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Testing...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'ğŸ“¦ Creating JAR...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn package -DskipTests'
                }
            }
        }
    }

    post {
        success {
            echo 'âœ… Success in Docker!'
            archiveArtifacts 'user-service/target/*.jar'
        }
        failure {
            echo 'âŒ Failed!'
        }
    }
}
