pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'Java'
        // git 'Git'
    }

    environment {
        // Test
        DOCKER_IMAGE = 'user-service'
        DOCKER_TAG = '1.0' //   "${BUILD_NUMBER}"

        // Database credentials from Jenkins
        DB_URL = credentials('db-url')
        DB_USERNAME = credentials('db-username')
        DB_PASSWORD = credentials('db-password')
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• Getting code...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'üî® Building...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn clean compile'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'üß™ Testing...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn test'
                }
            }
        }

        stage('Package') {
            steps {
                echo 'üì¶ Creating JAR...'
                dir('user-service') {  // Change to user-service directory
                    sh 'mvn package -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                echo 'üê≥ Building Docker image...'
                dir('user-service') {
                    script {
                        sh """
                            docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} .
                            docker tag ${DOCKER_IMAGE}:${DOCKER_TAG} ${DOCKER_IMAGE}:latest

                        """
                    }
                }
            }
        }

        stage('Docker Cleanup') {
            steps {
                echo 'üßπ Cleaning up old images...'
                script {
                    // Remove dangling images
                    sh 'docker image prune -f'
                }
            }
        }


        stage('Docker Compose Stop & Start') {
            steps {
                echo 'üîÑ Restarting containers...'
                script {
                    sh """
                        export SPRING_PROFILE=dev
                        export DB_URL='${DB_URL}'
                        export DB_USERNAME='${DB_USERNAME}'
                        export DB_PASSWORD='${DB_PASSWORD}'

                        docker compose down
                        docker compose up -d
                    """
                }
            }
        }
    }

    post {
        success {
            echo '‚úÖ Success! Docker image: ${DOCKER_IMAGE}:${DOCKER_TAG}'
        }
        failure {
            echo '‚ùå Failed!'
        }
        always {
            // Optional: Clean workspace
            cleanWs()
        }
    }
}
