pipeline {
    agent any

    tools {
        maven 'Maven'
        jdk 'Java'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¥ Getting code...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'ğŸ”¨ Building...'
                sh 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                echo 'ğŸ§ª Testing...'
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                echo 'ğŸ“¦ Creating JAR...'
                sh 'mvn package -DskipTests'
            }
        }
    }

    post {
        success {
            echo 'âœ… Success in Docker!'
            archiveArtifacts 'target/*.jar'
        }
        failure {
            echo 'âŒ Failed!'
        }
    }
}
